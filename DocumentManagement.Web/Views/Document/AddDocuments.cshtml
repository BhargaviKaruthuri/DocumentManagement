@{
    ViewData["Title"] = "Add Documents";
    Layout = "_Layout";
}
<div class="card rounded-3 shadow-sm">
    <div class="card-header">
        <h5 class="my-0 fw-normal"> Add new record </h5>
    </div>
    <div class="card-body">
        <form class="row g-3 needs-validation" id="addDocumentform" novalidate>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="name" class="form-control" required />
                    <div class="invalid-feedback">
                        Please provide a valid name.
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" id="description" cols="40" rows="2" class="form-control"></textarea>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <label for="pin" class="form-label">Property Identity Number(PIN)</label>
                    <input type="number" id="pin" name="pin" min="1" required class="form-control" />
                    <div class="invalid-feedback">
                        PIN must be atleast 1.
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <label for="document" class="form-label">Files</label>
                    <input class="form-control" type="file" id="document" multiple required>
                    <div class="invalid-feedback">
                        Please upload atleast one file.
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row"><br /></div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-primary" id="btnSave">Save</button>
                    <button type="button" class="btn btn-danger" onclick="showList();">Cancel</button>
                </div>
                <div class="col-md-3"></div>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script src="~/js/adddocuments.js"></script>
}
