@{
    ViewData["Title"] = "View Documents";
    Layout = "_Layout";
}
<div class="card rounded-3 shadow-sm">
    <div class="card-header">
        <h5 class="my-0 fw-normal"> View documents </h5>
    </div>
    <div class="card-body">
        <div class="row" style="border: 1px solid lightgrey;height:45px">
    <div class="col-md-4">
        <input type="hidden" id="docDetailId" value="" />
                <label class="form-label"><b>Name :</b></label>
        <label class="form-label" id="lblName"></label>
    </div>
    <div class="col-md-4">
                <label class="form-label"><b>Description :</b></label>
        <label class="form-label" id="lblDescription"></label>
    </div>
    <div class="col-md-4">
                <label class="form-label"><b>PropertyIdentityNumber :</b></label>
        <label class="form-label" id="lblPropertyIdentityNumber"></label>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3"></div>
    <div class="col-md-3">
    </div>
            <div class="col-md-3"> <button type="button" class="btn btn-primary" onclick="DownloadAllFiles();">Download All</button>
                <button type="button" class="btn btn-primary" onclick="showList();"><i class="bi bi-arrow-return-left" ></i></button>
            </div>
            
</div>
        <div class="row" style="display:none;" id="iframediv">
            <div class="col-md-6"></div>
            <div class="col-md-3"><button id="closeButton" onclick="Removeiframe();" style="margin: 0% 0% 0% 37%;" class="btn btn-danger">Close</button></div>
           <div class="col-md-3"></div>
            <div id="divdocumentViewer"><iframe id="documentViewer" width="800" height="350"></iframe></div>
        </div>
<div class="row">
    <div class="col-md-6">
        <table id="viewDocs" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>File Type</th>
                    <th>View Document</th>
                    <th>Download</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

</div>
</div>
@section Scripts{
    <script src="~/js/viewdocuments.js"></script>
    <script src="~/js/listview.js"></script>
}